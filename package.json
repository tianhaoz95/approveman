{
  "name": "approveman",
  "version": "1.0.0",
  "private": true,
  "description": "A GitHub app to help approve pull requests.",
  "author": "Tianhao Zhou <tianhaoz@umich.edu>",
  "license": "ISC",
  "repository": "https://github.com/tianhaoz95/approveman.git",
  "homepage": "https://github.com/tianhaoz95/approveman",
  "bugs": "https://github.com/tianhaoz95/approveman/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/src/index.js",
    "remark": "remark .",
    "remark:format": "remark . -o",
    "eslint": "eslint src/**.ts test/**.ts",
    "eslint:format": "eslint --fix src/**.ts test/**.ts",
    "prettier": "prettier --check .",
    "prettier:format": "prettier --write .",
    "test": "jest && npm run eslint",
    "test:silent": "LOG_LEVEL=warn jest && npm run eslint",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@octokit/rest": "^18.0.4",
    "@types/minimatch": "^3.0.3",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.6.0",
    "http-status-codes": "^2.1.2",
    "minimatch": "^3.0.4",
    "mustache": "^4.0.1",
    "probot": "^9.14.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/nock": "^11.1.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^26.4.2",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.1.1",
    "remark-cli": "^8.0.1",
    "remark-lint": "^7.0.1",
    "remark-preset-lint-recommended": "^4.0.1",
    "smee-client": "^1.2.2",
    "standard": "^14.3.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
