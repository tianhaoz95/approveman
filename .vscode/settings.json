{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.md$",
        "cmd": "npm run remark:format"
      },
      {
        "match": "README.md",
        "cmd": "bash ${workspaceFolder}/scripts/bash/check_sync.sh --fix"
      },
      {
        "match": "CONTRIBUTING.md",
        "cmd": "bash ${workspaceFolder}/scripts/bash/check_sync.sh --fix"
      }
    ]
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "editor.tabSize": 2,
  "cSpell.words": [
    "approveman",
    "buildx",
    "Codacy",
    "Codecov",
    "codezombiech",
    "dbaeumer",
    "docsmsft",
    "eamodio",
    "emeraldwalk",
    "esbenp",
    "ghcr",
    "gruntfuggly",
    "hbenl",
    "kohler",
    "lcov",
    "leizongmin",
    "Octokit",
    "orta",
    "Probot",
    "qemu",
    "rbbit",
    "repos",
    "runonsave",
    "smee",
    "subprojects",
    "tianhaoz",
    "tslog",
    "typedoc",
    "visualstudioexptteam",
    "vscodeintellicode",
    "wordcount",
    "yzhang"
  ],
  "markdownlint.config": {
    "MD028": false,
    "MD025": {
      "front_matter_title": ""
    }
  }
}
