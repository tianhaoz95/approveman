{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.md$",
        "cmd": "npm run remark:format"
      },
      {
        "match": "README.md",
        "cmd": "bash ${workspaceFolder}/scripts/bash/check_sync.sh --fix"
      },
      {
        "match": "CONTRIBUTING.md",
        "cmd": "bash ${workspaceFolder}/scripts/bash/check_sync.sh --fix"
      }
    ]
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "editor.tabSize": 2,
  "cSpell.words": [
    "Codacy",
    "Codecov",
    "Probot",
    "lcov",
    "subprojects",
    "tianhaoz"
  ]
}
